//This is for master node
node{

echo "The Node name is:  ${env.NODE_NAME}"
echo "The Job name is:  ${env.JOB_NAME}"
echo "The Build number is: ${env.BUILD_NUMBER}"

properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '3', daysToKeepStr: '', numToKeepStr: '3')), [$class: 'JobLocalConfiguration', changeReasonComment: '']])
properties([[$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])

buildName 'Dev - ${BUILD_NUMBER}'

buildDescription 'Pipeline Script - Scriptedway'

//Create One Variable for Maven Install on Jenkins Server
def mavenHome = tool name: "maven-3.9.6"

//Source Code Management
stage('CheckoutCode'){
git branch: 'development', url: 'https://github.com/successlead2000/my-web-application.git'
}


//Build Artifact by using Source Code
stage('BuildArtifact'){
sh "$mavenHome/bin/mvn clean package"
}


//Generate SonarQube Report
stage('SonarQubeReport'){
sh "$mavenHome/bin/mvn sonar:sonar"
}


//Upload Artifact into Nexus Artifact Repository
stage('UploadArtifact'){
sh "$mavenHome/bin/mvn deploy"
}


//Deploy Artifact into Tomcat Application Server
stage('DeployAppIntoTomcat'){
sshagent(['demo']) { 
sh "scp -o StrictHostKeyChecking=no target/my-web-application.war ubuntu@54.210.175.57:/opt/apache-tomcat-10.1.23/webapps"
}
}

}//Node Closing
